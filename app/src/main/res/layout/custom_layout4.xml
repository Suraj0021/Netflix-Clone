<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="20dp"
    app:cardMaxElevation="10dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/gray2"
    app:cardPreventCornerOverlap="true">

    <LinearLayout

        android:id="@+id/moviesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMovies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMoviesName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:text="NetFlix"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtMoviesCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:text="NetFlix"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtMoviesTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:text="NetFlix"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/playMovieHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_play_black"
                    android:fontFamily="@font/francois_one"
                    android:padding="2dp"
                    android:text="Play  "
                    android:textColor="@color/black"

                    android:textSize="18dp" />

                <Button
                    android:id="@+id/clearMovieHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/red"
                    android:drawableLeft="@drawable/ic_close_24"
                    android:fontFamily="@font/francois_one"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Clear  "
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>